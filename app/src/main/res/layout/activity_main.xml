<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player One"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/player1wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/player1"
        app:layout_constraintLeft_toLeftOf="@id/player1"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"/>
    <TextView
        android:id="@+id/player2wins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/player2"
        app:layout_constraintRight_toRightOf="@id/player2"
        android:layout_marginRight="40dp"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_0"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topbutons"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_1"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topbutons"
        android:backgroundTint="@color/light_pink"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_2"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topbutons"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_3"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_0"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_4"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        android:backgroundTint="@color/light_pink"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_5"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_6"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_7"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        android:backgroundTint="@color/light_pink"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_8"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topbutons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22"/>


</androidx.constraintlayout.widget.ConstraintLayout>