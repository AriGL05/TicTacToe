<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic-Tac-Toe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/topbutons"
        android:textSize="70sp"
        android:textStyle="bold"
        android:textColor="#BBB"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_0"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topbutons"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_1"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topbutons"
        android:backgroundTint="@color/light_pink"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_2"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topbutons"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_3"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_0"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_4"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        android:backgroundTint="@color/light_pink"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_5"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_6"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_7"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        android:backgroundTint="@color/light_pink"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        app:layout_constraintLeft_toRightOf="@id/btn_0"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/btn_8"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        android:backgroundTint="@color/light_pink"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintLeft_toRightOf="@id/btn_1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topbutons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="161dp" />


</androidx.constraintlayout.widget.ConstraintLayout>